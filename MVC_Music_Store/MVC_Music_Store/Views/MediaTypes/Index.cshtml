@model IEnumerable<MVC_Music_Store.Models.MediaType>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">MediaTypes</h2>

<p class="btn btn-default" style="margin-bottom: 2rem;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MediaTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MediaTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MediaTypeId })
        </td>
    </tr>
}

</table>
